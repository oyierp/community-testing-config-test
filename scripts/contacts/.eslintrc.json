{
  "extends": [
    "@medic"
  ],
  "plugins": [
    "json"
  ],
  "env": {
    "es6": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "max-len": "off",
    "no-console": "off",
    "no-undef": "error",
    "no-debugger": "off",
    "quotes": [
      "error",
      "single",
      {
        "allowTemplateLiterals": true,
        "avoidEscape": true
      }
    ]
  }
}